@model IEnumerable<JSE.EmployeeLeaveSystem.Mvc.Models.LeaveRequestViewModel>
@{
    ViewBag.Title = "Subordinate Leave Requests";
}
<h2>Subordinate Leave Requests</h2>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Employee</th>
            <th>Type</th>
            <th>Start</th>
            <th>End</th>
            <th>Status</th>
            <th>Reason</th>
            <th>Comments</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var req in Model)
        {
            <tr>
                <td>@req.EmployeeName</td>
                <td>@req.LeaveTypeName</td>
                <td>@req.StartDate.ToShortDateString()</td>
                <td>@req.EndDate.ToShortDateString()</td>
                <td>@req.Status</td>
                <td>@req.Reason</td>
                <td>@req.Comments</td>
                <td>
                    @if (req.Status == "Pending")
                    {
                        using (Html.BeginForm("Approve", "Manager", new { id = req.Id }, FormMethod.Post, new { @class = "d-inline" }))
                        {
                            <input type="text" name="comments" placeholder="Comments" class="form-control mb-1" />
                            <button type="submit" class="btn btn-success btn-sm">Approve</button>
                        }
                        using (Html.BeginForm("Reject", "Manager", new { id = req.Id }, FormMethod.Post, new { @class = "d-inline" }))
                        {
                            <input type="text" name="comments" placeholder="Comments" class="form-control mb-1" />
                            <button type="submit" class="btn btn-danger btn-sm">Reject</button>
                        }
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
