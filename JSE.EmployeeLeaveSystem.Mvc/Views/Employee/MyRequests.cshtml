@model IEnumerable<JSE.EmployeeLeaveSystem.Mvc.Models.LeaveRequestViewModel>
@{
    ViewBag.Title = "My Leave Requests";
}
<h2>My Leave Requests</h2>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Leave Type</th>
            <th>Employee</th>
            <th>Team</th>
            <th>Start</th>
            <th>End</th>
            <th>Status</th>
            <th>Reason</th>
            <th>Comments</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var req in Model)
        {
            <tr>
                <td>@(req.LeaveTypeName ?? "-")</td>
                <td>@(req.EmployeeName ?? "-")</td>
                <td>@(req.Team ?? "-")</td>
                <td>@req.StartDate.ToString("yyyy-MM-dd")</td>
                <td>@req.EndDate.ToString("yyyy-MM-dd")</td>
                <td>@req.Status</td>
                <td>@req.Reason</td>
                <td>@(req.Comments ?? "-")</td>
                <td>
                    @if (req.Status == "Pending")
                    {
                        <a href="@Url.Action("EditLeave", new { id = req.Id })" class="btn btn-sm btn-primary">Edit</a>
                        <a href="@Url.Action("RetractLeave", new { id = req.Id })" class="btn btn-sm btn-danger">Retract</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
